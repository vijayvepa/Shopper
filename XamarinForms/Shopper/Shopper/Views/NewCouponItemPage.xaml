<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Shopper.Views.NewCouponItemPage" Title="Add Coupon">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Enter one item per line, use mm/dd or mm/dd/yy to enter expiration dates at the end, for example"/>
            <Label Text="Ferrero Rocher 12/12" TextColor="Gray"/>
            <Editor Text="{Binding CouponText}"  VerticalOptions="FillAndExpand" Keyboard="Text" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
