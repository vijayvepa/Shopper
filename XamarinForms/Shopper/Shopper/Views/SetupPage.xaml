                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Text}" LineBreakMode="NoWrap" Style="{DynamicResource ListItemTextStyle}" Margin="10" FontSize="30" FontAttributes="Bold" />
                            <Label Grid.Row="0" Grid.Column="1" Text="â€º" HorizontalTextAlignment="End" FontSize="30" Margin="10" TextColor="Navy" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>